/* pages/love/love.wxss */
/* index.wxss */
page {
  background-color: #f1d5da; /* 设置背景颜色 */
  height: 100%; /* 确保页面高度占满屏幕 */
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.top-button{
  width: 200rpx;
  height: 80rpx;
  margin: 50rpx;
  transition: all 0.3s ease; /* 添加过渡效果 */
  background-color: #6784b1; /* 背景颜色 */
  color: #ffffff; /* 文字颜色 */
  border: none; /* 去掉边框 */
  border-radius: 20rpx; /* 圆角 */
  padding: 20rpx 40rpx; /* 内边距 */
}

.bottom-button {
  width: 200rpx;
  height: 80rpx;
  margin: 50rpx;
  transition: all 0.3s ease; /* 添加过渡效果 */
  background-color: #d4818e; /* 背景颜色 */
  color: #ffffff; /* 文字颜色 */
  border: none; /* 去掉边框 */
  border-radius: 20rpx; /* 圆角 */
  padding: 20rpx 40rpx; /* 内边距 */
}

.question{
  font-size: 20px;
  margin: 30rpx;
  color: #68495b;
}